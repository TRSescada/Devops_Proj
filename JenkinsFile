pipeline {
    agent any
     tools {
         nodejs 'nodejs'
     
      }
    stages {
        stage ('Check Tools Initializing') {
            steps {
                sh' npm install express'
            }
        }
         stage('Git checkout') {
            steps {
               
             git branch: 'main',url:'https://github.com/TRSescada/Devops_Proj.git'
            }
        }
           stage('Packages Installations') {
            steps {
               sh 'pwd'
              sh 'npm install'
            }
        }
             stage('TEST') {
            steps {
              
           echo 'TEsTING ...'
             sh 'npm run test'
            }
        }
                   stage('BUILD') {
            steps {
              
           echo 'Build ...'
             sh 'npm run build'
            }
        }
    }
}
